{% block header %}
    <header class="col-12 bg-white d-flex align-items-center">
    <div class="col-2 d-flex justify-content-end pe-5">
        <a href="/home">
            <img src="{{asset('images/logo_forsa.png')}}" alt="">
        </a>
    </div>
    <div class="col-1">
         <i data-icon="category">
